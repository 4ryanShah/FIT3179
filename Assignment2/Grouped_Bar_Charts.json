          "Europe",
          "Africa",
          "Asia",
          "Oceania"
          ],
          "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#33a02c",
          "#377eb8",
          "#a65628"
          ]
          }
          },
          "tooltip": [
            {
              "field": "Continent",
              "type": "nominal",
              "title": "Continent"
            },
            {
              "aggregate": "average",
              "field": "Fertility Rate",
              "type": "quantitative",
              "title": "Average Fertility Rate"
            }
