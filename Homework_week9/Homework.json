{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "CO2 Emissions by Country in 2023",
    "projection": {"type": "equalEarth"},
    "layer": [
  
       {
          "data": {
            "url": "ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "grey"}
        },
      {
        "data": {
          "url": "ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {"url": "Homework_week9/world-data-2023-aryan.csv"},
              "key": "Country",
              "fields": ["Co2-Emissions"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "grey"},
        "encoding": {
          "color": {
            "field": "Co2-Emissions",
            "type": "quantitative",
            "scale": {
  "type": "linear",
  "domain": [10, 300, 6000000],
  "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
  },
            "legend": {"title": "Co2-Emissions"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Co2-Emissions", "type": "quantitative", "title": "Co2-Emissions"}
          ]
        }},
            {
        "data": {
          "url": "ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      }
    ]
  }